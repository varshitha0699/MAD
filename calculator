java file
package com.example.firstapp;

import androidx.appcompat.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.TextView;

public class MainActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        final EditText e1=(EditText)findViewById(R.id.editText);
        final EditText e2=(EditText)findViewById(R.id.editText2);
        final float num1=Float.parseFloat(e1.getText().toString());
        final float num2=Float.parseFloat(e2.getText().toString());
        final TextView t1=(TextView)findViewById(R.id.res);
        Button add=(Button)findViewById(R.id.add);
        Button sub=(Button)findViewById(R.id.sub);
        Button div=(Button)findViewById(R.id.div);
        Button mul=(Button)findViewById(R.id.mul);
        add.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                float ans=num1+num2;
                t1.setText(Float.toString(ans));


            }
        });
        sub.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                float ans=num1-num2;
                t1.setText(Float.toString(ans));
            }
        });
        mul.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                float ans=num1*num2;
                t1.setText(Float.toString(ans));
            }
        });
        div.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                float ans=num1/num2;
                t1.setText(Float.toString(ans));
            }
        });
    }

}
